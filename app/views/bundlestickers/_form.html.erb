<%= form_for(@bundlesticker) do |f| %>
<div>
  <%= f.label :language, t("bundlestickers.language") %></br>
  <%= f.collection_select(:language_id, Language.all,:id, :description, :selected => 1) %>
</div>

<div>
  <%= f.label :neutral, t("bundlestickers.neutral") %></br>
  <%= f.select :neutral , {"Ja" => true, "Nein" => false}, :selected => false %>
</div>

<div>
  <%= f.label :ce, t("bundlestickers.ce") %></br>
  <%= f.select :ce, {"Ja" => true, "Nein" => false}, :selected => false %>
</div>

<div>
  <%= f.label :unique_number, t("bundlestickers.unique_number") %></br>
  <%= f.text_field :unique_number %>
</div>

<div>
<%= f.submit %>
</div>
<% end %>

